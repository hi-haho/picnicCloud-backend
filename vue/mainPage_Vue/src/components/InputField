<template>
  <div> <!-- 부모 요소로 모든 내용을 감싸줍니다 -->
    <label v-if="label" :for="id">{{ label }}</label>
    <input 
      :type="type" 
      :id="id"
      :value="value" 
      :placeholder="placeholder" 
      @input="$emit('input', $event.target.value)" 
      :class="mode"
    />
  </div>
</template>

<script>
export default {
  name: "InputField",
  props: {
    type: {
      type: String,
      default: "text"
    },
    id: {
      type: String,
      required: true
    },
    value: {
      type: [String, Number],
      default: ""
    },
    placeholder: {
      type: String,
      default: ""
    },
    label: {
      type: String,
      default: ""
    },
    mode: {
      type: String,
      default: "default-mode" // 스타일링 모드를 지정할 수 있는 prop
    }
  }
};
</script>

<style scoped>
/* 기본 input 스타일링 */
input {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  width: 100%;
  box-sizing: border-box;
}

/* Hover와 Active 상태의 스타일 */
input:hover,  
input:active {  
  border-color: #08aaeb;  
}

/* mode prop에 따른 스타일링 */
.default-mode {
  background-color: white;
}

.primary-mode {
  background-color: #87ceeb;
  border-color: #87ceeb;
  color: white;
}

.error-mode {
  background-color: #ffdddd;
  border-color: #ff5c5c;
  color: red;
}
</style>
